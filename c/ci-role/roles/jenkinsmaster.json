{
	"name": "jenkinsmaster",
	"description": "Installiert Standardanwendungen, Jenkins, Plugins, Apache2 und Java. Konfiguriert Jenkins und richtet Apache als Proxy ein.",
	"json_class": "Chef::Role",
	"chef_type": "role",
	"default_attributes": {
		"jenkins": {
			"master": {
				"install_method": "package",
				"repository": "http://pkg.jenkins-ci.org/redhat-stable",
				"repository_key": "https://jenkins-ci.org/redhat/jenkins-ci.org.key",
				"listen_address": "127.0.0.1"
			}
		},
		"ciexjenkins": {
			"install_plugins": "true"
		},
		"ciexproxy": {
			"forward_port": 8080,
			"hostname": "localhost",
			"aliases": ["jenkins.local"],
			"use_jenkins_config": true,
			"activate_https": true,
			"redirect_port": 8082
		}
	},
	"run_list": ["recipe[ciexbase::default]", "recipe[ciexjenkins::master]", "recipe[git::default]", "recipe[ciexproxy::server]"]
}
