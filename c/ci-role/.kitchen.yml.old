---
driver:
  name: vagrant
  vagrantfiles:
    - workaround_kitchen_vagrant_bug_181.rb

provisioner:
  name: chef_zero

platforms:
  - name: centos7
    driver:
      box: centos/7
      # box_url: http://box.adesso.de/adesso-centos-7.0-virtualbox-2015-02-11.box
      box_check_update: false
      ssh:
        insert_key: false
      network:
        - ["forwarded_port", {guest: 443, host: 8082}]
        - ["forwarded_port", {guest: 80, host: 8081}]

suites:
  - name: default
    run_list:
      - role[jenkinsmaster]
    attributes: {}
